<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".Covid">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="405dp"
        android:layout_height="224dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textCorona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pozitiv" />

    <Button
        android:id="@+id/covbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Povratak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textCorona"
        android:layout_width="385dp"
        android:layout_height="225dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif"
        android:text="Prema simptomima koje ste odabrali, velika je vjerojatnost da se radi upravo o bolesti COVID-19. Ostanite kod kuće i fizički se izolirajte od svojih ukućana i obavijestite svojeg izabranog liječnika telefonom ili e-mailom. Liječnik će vam dati upute o izolaciji te po potrebi otvoriti bolovanje. Obavijestite bliske kontakte o svojoj bolesti, odnosno pozitivnom nalazu na COVID-19 te ih uputite da se jave izabranom liječniku radi samoizolacije. Bliski kontakti su sve osobe s kojima ste bili u kontaktu unutar 48 sati prije pojave prvih simptoma bolesti pa sve do trenutka Vašeg odlaska u izolaciju."
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="387dp"
        android:layout_height="171dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="Većina osoba koje obole od koronavirusne bolesti COVID-19 ima blage do umjerene simptome i ozdravi bez posebnog liječenja. Međutim, kod nekih se osoba razvije težak oblik bolesti i potrebna im je medicinska njega."
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/covbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCorona" />

</androidx.constraintlayout.widget.ConstraintLayout>